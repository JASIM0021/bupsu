{
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.autoIndent": "full",
    "editor.trimAutoWhitespace": true,
    "files.insertFinalNewline": true,
    "prettier.singleQuote": true,   // Assuming you use Prettier
    "prettier.trailingComma": "all", // Optional: Adjust this based on your preference
    "prettier.arrowParens": "avoid", // Optional: Adjust this based on your preference
    "[javascript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode" // Assuming you use Prettier for JavaScript
    },
    "[typescript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode" // Assuming you use Prettier for TypeScript
    }
  }
  